# ============================================
# GovBid Scout Configuration
# ============================================

# Server
PORT=3000
NODE_ENV=development

# Database (Supabase PostgreSQL)
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres.xxxxxxxxxxxx:your-password@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# Redis
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key

# SendGrid Email
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=alerts@govbidscout.com

# Twilio SMS (optional)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1...

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Application
APP_URL=http://localhost:3000

# Dashboard (for CORS)
DASHBOARD_URL=http://localhost:3001

# SAM.gov API
SAM_GOV_API_KEY=your-sam-gov-api-key

# Worker Settings
PROFILE_RUNNER_INTERVAL_MINUTES=5
DEFAULT_RUN_INTERVAL_MINUTES=60
LOCK_TIMEOUT_MINUTES=5

# ============================================
# Phase 2.5 Additions
# ============================================

# Competitive Intelligence APIs (for future implementation)
USA_SPENDING_API_KEY=your-usaspending-api-key
FPDS_API_KEY=your-fpds-api-key

# Digest/Brief Scheduling
DEFAULT_DIGEST_HOUR=7
DEFAULT_BRIEF_DAY=0

# Dashboard URL (for email links)
# DASHBOARD_URL is already defined above
